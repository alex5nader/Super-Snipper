<Window x:Class="SuperSnipper.ScreenshotTaker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperSnipper"
        mc:Ignorable="d"
        Title="ScreenshotTaker"
        WindowStyle="None" ShowInTaskbar="False" AllowsTransparency="True" Background="Transparent" Topmost="False"
        PreviewMouseDown="StartDrawRect" PreviewMouseUp="StopDrawRect">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Name="Row0"/>
            <RowDefinition Name="Row1"/>
            <RowDefinition Name="Row2"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="Col0"/>
            <ColumnDefinition Name="Col1"/>
            <ColumnDefinition Name="Col2"/>
        </Grid.ColumnDefinitions>
        <Image Name="BackgroundImage" Grid.RowSpan="3" Grid.ColumnSpan="3" Grid.Row="0" Grid.Column="0"/>
    </Grid>
</Window>
